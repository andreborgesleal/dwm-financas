@using DWM.Models.Repositories;
@model System.Web.Mvc.PagedList<GrupoCredorViewModel>
@{
    Layout = null;
}

@if (Model != null)
{
    <div class="row Scroll margem-negativa">
        <div class="col-md-12" style="padding-right: 0px;">
            <table class="table table-striped jambo_table bulk_action" style="cursor: pointer">
                <caption></caption>
                <thead>
                    <tr class="headings">
                        <th class="column-title">Nome do grupo</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (GrupoCredorViewModel gcre in Model)
                    {
                        <tr class="even pointer" onclick="Move('@gcre.grupoCredorId', '@gcre.nome')">
                            <td>
                                <small>@gcre.nome</small>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    @Html.Partial("Paginacao", Model)
}
else
{
    @Html.Partial("_AcessoNegadoModal")
}


