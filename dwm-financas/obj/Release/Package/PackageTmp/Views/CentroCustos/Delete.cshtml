@using App_Dominio.Repositories
@model DWM.Models.Repositories.CentroCustoViewModel
@{
    TransacaoRepository[] t = { new TransacaoRepository(), new TransacaoRepository() };
    t[0].url = "../CentroCustos/Create";
    t[0].nomeCurto = "Incluir";
    t[0].referencia = "";

    t[1].url = "../Home/Default";
}
<div class="container-cadastro">
    <div class="x_panel">
        @Html.EditorFor(info => Model, "FORMULARIO", new { Brand = "Centros de Custos", Descricao = "Excluir Centros de Custos", Transacao = t })
        <div class="x_content">
            @using (Html.BeginForm("Delete", "CentroCustos", FormMethod.Post, new { @class = "form-horizontal" }))
            {
                @Html.ValidationSummary("", new { @class = "text-danger" })
                @Html.HiddenFor(info => info.centroCustoId)
                @Html.HiddenFor(info => info.descricao)
                @Html.HiddenFor(info => info.empresaId)
                <div class="well well-sm">Atenção: Não será permitido excluir um centro de custo se houver movimento financeiro/contábil vinculado a ele.</div>
                <div class="row">
                    <div class="col-md-4 col-xs-12 col-sm-12 col-lg-4">
                        <div class="form-group">
                            @Html.LabelFor(m => m.descricao, new { @class = "control-label" })
                            <input type="text" class="form-control" name="descricao" id="descricao" value="@Model.descricao" disabled maxlength="30" />
                        </div>
                    </div>
                </div>
                <p>&nbsp;</p>
                <div class="row clearfix">
                    <div class="col-md-12">
                        <div class="form-group">
                            <input type="submit" class="btn btn-danger" value="Excluir" name="btn-excluir" id="btn-excluir" />
                            <input type="button" onclick="window.location = '../CentroCustos/Browse'" class="btn btn-default" value="Cancelar" />
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>