@model System.Web.Mvc.PagedList<DWM.Models.Repositories.BancoViewModel>

@{
    Layout = null;
}
@if (Model != null)
{
    <div class="dashboard-widget-content">
        <div class="col-md-5">
            Clique nos botões de <code>Ação</code> para executar a ação desejada
        </div>
        <div class="col-md-1">
            <a href="../Bancos/Create" class="text-primary">Incluir</a>
        </div>
        <div class="col-md-offset-9 col-lg-offset-9 col-xs-offset-7">
            @Html.Partial("Filtro")
        </div>
        <div class="table-responsive">
            <table class="table table-striped jambo_table bulk_action">
                <thead>
                    <tr class="headings">
                        <th class="col-md-2 column-title text-center nobr">Ação</th>
                        <th class="column-title">Nome</th>
                        <th class="column-title">Sigla</th>
                        <th class="column-title text-center">Classificação</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (DWM.Models.Repositories.BancoViewModel ban in Model)
                    {
                        <tr class="even pointer">
                            <td class="col-md-2 text-center">
                                <button type="button" class="btn btn-primary btn-sm glyphicon glyphicon-edit" title="Editar" onclick="window.location='Edit?bancoId=@ban.bancoId'"></button>
                                <button type="button" class="btn btn-danger btn-sm glyphicon glyphicon-trash" title="Excluir" onclick="window.location='Delete?bancoId=@ban.bancoId'"></button>
                            </td>
                            <td>
                                <span>@ban.nome</span>
                            </td>
                            <td>
                                <span>@ban.sigla</span>
                            </td>
                            <td>
                                <span class="text-center">@ban.classificacao</span>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        @Html.Partial("Paginacao", Model)
    </div>
}
else
{
    @Html.Partial("_AcessoNegadoModal")
}

