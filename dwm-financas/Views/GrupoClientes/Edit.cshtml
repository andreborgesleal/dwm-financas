@using App_Dominio.Repositories
@model DWM.Models.Repositories.GrupoClienteViewModel
@{
    TransacaoRepository[] t = { new TransacaoRepository(), new TransacaoRepository() };
    t[0].url = "../GrupoClientes/Edit";
    t[0].nomeCurto = "Editar";
    t[0].referencia = "";

    t[1].url = "../Home/Default";
}
<div class="x_panel">
    @Html.EditorFor(info => Model, "FORMULARIO", new { Brand = "Grupo de Clientes", Descricao = "Alterar Grupo de Cliente. Ex: Médicos, Condôminos, Imobiliárias, Mensalistas, Cliente Eventuais, Cliente Diversos", Transacao = t })
    <div class="x_content">
        @using (Html.BeginForm("Edit", "GrupoClientes", FormMethod.Post, new { @class = "form-horizontal" }))
        {
            @Html.Partial("_alerts")
            @Html.ValidationSummary("", new { @class = "text-danger" })
            @Html.HiddenFor(info => info.grupoClienteId)
            @Html.HiddenFor(info => info.empresaId)
            <div class="row">
                <div class="col-md-4 col-xs-12 col-sm-12 col-lg-4">
                    <div class="form-group">
                        @Html.LabelFor(m => m.nome, new { @class = "control-label" })
                        <input type="text" class="form-control" name="nome" id="nome" value="@Model.nome" maxlength="30" />
                    </div>
                </div>
            </div>
            <p>&nbsp;</p>
            <div class="row clearfix">
                <div class="col-md-12">
                    <div class="form-group">
                        <input type="submit" class="btn btn-success" value="Salvar" name="btn-salvar" id="btn-salvar" />
                        <input type="button" onclick="window.location = '../GrupoClientes/Browse'" class="btn btn-default" value="Cancelar" />
                    </div>
                </div>
            </div>
        }
    </div>
</div>
