@model System.Web.Mvc.PagedList<DWM.Models.Repositories.GrupoCredorViewModel>

@{
    Layout = null;
}
@if (Model != null)
{
    <div class="dashboard-widget-content">
        <p>Clique nos botões de <code>Ação</code> para executar a ação desejada</p>
        <div class="table-responsive">
            <table class="table table-striped jambo_table bulk_action">
                <thead>
                    <tr class="headings">
                        <th class="col-md-2 column-title text-center nobr">Ação</th>
                        <th class="column-title">Nome</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (DWM.Models.Repositories.GrupoCredorViewModel gru in Model)
                    {
                        <tr class="even pointer">
                            <td class="col-md-2 text-center">
                                <button type="button" class="btn btn-primary btn-sm glyphicon glyphicon-edit" title="Editar" onclick="window.location='Edit?grupoCredorId=@gru.grupoCredorId'"></button>
                                <button type="button" class="btn btn-danger btn-sm glyphicon glyphicon-trash" title="Excluir" onclick="window.location='Delete?grupoCredorId=@gru.grupoCredorId'"></button>
                            </td>
                            <td>
                                <h4>@gru.nome</h4>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        @Html.Partial("Paginacao", Model)
    </div>
}
else
{
    @Html.Partial("_AcessoNegadoModal")
}
