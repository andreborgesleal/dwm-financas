@using App_Dominio.Repositories
@using DWM.Models.Repositories
@model PagedList<ClienteViewModel>
@{
    TransacaoRepository[] t = { new TransacaoRepository(), new TransacaoRepository() };
    t[0].url = "../Clientes/Create";
    t[0].nomeCurto = "Incluir";
    t[0].referencia = "";

    t[1].url = "../Home/Default";
}
<div class="container-cadastro">
    @Html.Partial("_alerts")
    <div class="x_panel">
        @Html.EditorFor(info => Model, "FORMULARIO", new { Brand = "Clientes", Descricao = "Listagem de Clientes", Transacao = t })
        <div class="x_content">
            <div id="div-list">
                @Html.Partial("List", Model)
            </div>
            <div class="altura-35">
                @Html.Partial("_defaultListButtons", new List<ButtonRepository> { new ButtonRepository() { linkText = "Incluir", actionName = "Create", controllerName = "Clientes", buttonType = "link" } })
            </div>
        </div>
    </div>
</div>
