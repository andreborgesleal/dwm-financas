@{
    var next = ViewData["nextField"];
    var previous = ViewData["prevField"];
    var value = ViewData["value"];
    var Text = ViewData["Text"];
    var tabindex = ViewData["tabindex"];
}
<div class="form-group">
    <label class="control-label" for="nome_grupoCliente">Grupo de Clientes</label>
    <div class="input-group" id="GrupoCliParent">
        <input type="text" id="nome_grupoCliente" name="nome_grupoCliente" value="@Text" class="form-control" onblur="fillGrupoCli();" tabindex="@tabindex" />
        <input type="hidden" id="grupoClienteId" name="grupoClienteId" value="@value" />
        <div class="input-group-btn">
            <button class="btn btn-primary" style="margin-top: -5px" type="button" onclick="showLookup('LovGrupoClienteModal');"><i class="glyphicon glyphicon-search"></i></button>
            <button class="btn btn-instagram" style="margin-top: -5px" type="button" onclick="clean('grupoClienteId', 'nome_grupoCliente');"><i class="glyphicon glyphicon-remove"></i></button>
        </div>
    </div>
    <div id="div-lov"></div>
</div>

<script>
    // Next Field
    $('#GrupoCliParent').on('keydown', '#nome_grupoCliente', function (e) {
        var keyCode = e.keyCode || e.which;
        if (keyCode == 9 && '@next' != '') {
            e.preventDefault();
            if (!e.shiftKey)
                $('#@next').focus();
            else
                $('#@previous').focus();
        }
    });
    // Fim-Next Field

    var link = encodeURI('../GrupoClientes/getNames?noCahce=' + new Date());
    var data = { values: [] };
    var gcli = { countries: [] };
    $.ajax({
        type: "POST",
        url: link,
        contentType: "application/json; charset=utf-8",
        global: false,
        async: false,
        dataType: "json",
        success: function (jsonObj) {
            for (i in jsonObj) {
                data.values.push(jsonObj[i].nome);
                gcli.countries.push({ objId: jsonObj[i].grupoClienteId, nome: jsonObj[i].nome })
            };
        }
    });

    $('#nome_grupoCliente').typeahead({
        local: data.values,
    });
    $('nome_grupoCliente').css('background-color', '#fff');

    function fillGrupoCli() {
        for (i in gcli.countries) {
            if (gcli.countries[i].nome == $('#nome_grupoCliente').val()) {
                $('#grupoClienteId').val(gcli.countries[i].objId);
            }
        }
    }

</script>

