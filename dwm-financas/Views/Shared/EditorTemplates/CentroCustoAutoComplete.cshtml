@{
    var next = ViewData["nextField"];
    var previous = ViewData["prevField"];
    var value = ViewData["value"];
    var Text = ViewData["Text"];
    var tabindex = ViewData["tabindex"];
}
<div class="form-group">
    <label class="control-label" for="descricao_centroCusto">Centro de Custo</label>
    <div class="input-group" id="CCustoParent">
        <input type="text" id="descricao_centroCusto" name="descricao_centroCusto" value="@Text" class="form-control" onblur="fillCCusto();" tabindex="@tabindex"/>
        <input type="hidden" id="centroCustoId" name="centroCustoId" value="@value"/>
        <div class="input-group-btn">
            <button class="btn btn-primary" style="margin-top: -5px" type="button" onclick="showLookup('LovCentroCustoModal');"><i class="glyphicon glyphicon-search"></i></button>
            <button class="btn btn-bitbucket" style="margin-top: -5px" type="button" onclick="InsertModal('../CentroCustos/CrudCentroCustoModal',
                            'descricao' ,
                            'centroCustoId' ,
                            'descricao_centroCusto' ,
                            '@next' );">
                <i class="glyphicon glyphicon-plus"></i>
            </button>
            <button class="btn btn-instagram" style="margin-top: -5px" type="button" onclick="clean('centroCustoId', 'descricao_centroCusto');"><i class="glyphicon glyphicon-remove"></i></button>
        </div>
    </div>
    <div id="div-lov"></div>
</div>

<script>
    // Next Field
    $('#CCustoParent').on('keydown', '#descricao_centroCusto', function (e) {
        var keyCode = e.keyCode || e.which;
        if (keyCode == 9 && '@next' != '') {
            e.preventDefault();
            if (!e.shiftKey)
                $('#@next').focus();
            else
                $('#@previous').focus();
        }
    });
    // Fim-Next Field

    var link = encodeURI('../CentroCustos/getNames?noCahce=' + new Date());
    var data = { values: [] };
    var ccu = { countries: [] };
    $.ajax({
        type: "POST",
        url: link,
        contentType: "application/json; charset=utf-8",
        global: false,
        async: false,
        dataType: "json",
        success: function (jsonObj) {
            for (i in jsonObj) {
                data.values.push(jsonObj[i].descricao);
                ccu.countries.push({ objId: jsonObj[i].centroCustoId, descricao: jsonObj[i].descricao })
            };
        }
    });

    $('#descricao_centroCusto').typeahead({
        local: data.values,
    });
    $('descricao_centroCusto').css('background-color', '#fff');

    function fillCCusto() {
        for (i in ccu.countries) {
            if (ccu.countries[i].descricao == $('#descricao_centroCusto').val()) {
                $('#centroCustoId').val(ccu.countries[i].objId);
            }
        }
    }

</script>
