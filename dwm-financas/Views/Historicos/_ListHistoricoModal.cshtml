@using DWM.Models.Repositories;
@model System.Web.Mvc.PagedList<HistoricoViewModel>
@{
    Layout = null; 
}

@if (Model != null)
{
    <div class="hidden-xs hidden-sm hidden-md">
        <table class="table table-striped jambo_table bulk_action" style="width: 100%" id="datatableHIS1">
            <thead>
                <tr class="headings">
                    <th class="col-md-2 col-lg-2 column-title text-center nobr">Ação</th>
                    <th class="column-title">Descrição</th>
                </tr>
            </thead>
            <tbody>
                @foreach (HistoricoViewModel his in Model)
                {
                    <tr class="even pointer">
                        <td class="col-md-2 col-lg-2 text-center">
                            <button type="button" class="fa fa-check" title="Selecionar" onclick="Move('@his.historicoId', '@his.descricao')"></button>
                        </td>
                        <td>
                            <small>@his.descricao</small>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="hidden-lg Scroll">
        <table class="table table-striped jambo_table bulk_action" style="width: 100%" id="datatableHIS2">
            <thead>
                <tr class="headings">
                    <th class="col-md-2 col-lg-2 column-title text-center nobr">Ação</th>
                    <th class="column-title">Descrição</th>
                </tr>
            </thead>
            <tbody>
                @foreach (HistoricoViewModel his in Model)
                {
                    <tr class="even pointer">
                        <td class="col-md-2 col-lg-2 text-center">
                            <button type="button" class="fa fa-check" title="Selecionar" onclick="Move('@his.historicoId', '@his.descricao')"></button>
                        </td>
                        <td>
                            <small>@his.descricao</small>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    
}
else
{
    @Html.Partial("_AcessoNegadoModal")
}
<!-- Datatables -->
<script src="../Content/vendors/datatables.net/js/jquery.dataTables.min.js"></script>
<script src="../Content/vendors/datatables.net-bs/js/dataTables.bootstrap.min.js"></script>

<script>
    $('#datatableHIS1').DataTable({
        lengthMenu: [[15, 25, 50, 100, -1], [15, 25, 50, 100, "Todos"]],
        iDisplayLength: 15,
        language: {
            "url": "../Scripts/DataTablePtBr.txt"
        },
    });
    $('#datatableHIS2').DataTable({
        lengthMenu: [[15, 25, 50, 100, -1], [15, 25, 50, 100, "Todos"]],
        iDisplayLength: 15,
        language: {
            "url": "../Scripts/DataTablePtBr.txt"
        },
    });
</script>






