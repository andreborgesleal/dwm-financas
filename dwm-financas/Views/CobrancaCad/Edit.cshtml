@using DWM.Models.Repositories
@using App_Dominio.Repositories
@using App_Dominio.Enumeracoes
@model CobrancaViewModel
@{
    TransacaoRepository[] t = { new TransacaoRepository(), new TransacaoRepository() };
    t[0].url = "../CobrancaCad/Create";
    t[0].nomeCurto = "Incluir";
    t[0].referencia = "";

    t[1].url = "../Home/Default";
}

<div class="container-cadastro">
    @Html.Partial("_alerts")
    <div class="x_panel">
        @Html.EditorFor(info => Model, "FORMULARIO", new { Brand = "Cadastro de cobrança", Descricao = "Editar as confirgurações da cobrança", Transacao = t })
        <div class="x_content">
            @using (Html.BeginForm("Edit", "CobrancaCad", FormMethod.Post, new { @class = "form-horizontal", @id = "form0" }))
            {
                @Html.ValidationSummary("", new { @class = "text-danger" })
                @Html.HiddenFor(info => info.cobrancaId)
                <div class="row">
                    <div class="col-md-6 col-xs-12 col-sm-12 col-lg-6">
                        <div class="form-group">
                            <label class="control-label" for="grupoCobrancaId">Cobrança</label>
                            @Html.DropDownListFor(m => m.grupoCobrancaId, new DWM.Models.Enumeracoes.BindDropDownList().GrupoCobrancas("", Model.grupoCobrancaId.ToString()), new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="col-md-6 col-xs-12 col-sm-12 col-lg-6">
                        <div class="form-group">
                            <label class="control-label" for="grupoClienteId">Pagadores</label>
                            @Html.DropDownListFor(m => m.grupoClienteId, new DWM.Models.Enumeracoes.BindDropDownList().GrupoClientesParaCobranca(Model.grupoClienteId.ToString()), new { @class = "form-control" })
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6 col-xs-12 col-sm-12 col-lg-6">
                        @Html.Editor("descricao_historico1", "HistoricoAutoComplete", new
               {
                   value = Model.historicoId > 0 ? Model.historicoId.ToString() : "",
                   Text = Model.descricao_historico ?? "",
                   nextField = "nome_banco",
                   prevField = "grupoClienteId"
               })
                    </div>
                    <div class="col-md-6 col-xs-12 col-sm-12 col-lg-6">
                        @Html.Editor("nome_banco1", "BancosAutoComplete", new
               {
                   value = Model.bancoId.ToString(),
                   Text = Model.nome_banco ?? "",
                   nextField = "descricao_enquadramento",
                   prevField = "descricao_historico"
               })
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6 col-xs-12 col-sm-12 col-lg-6">
                        @Html.Editor("descricao_enquadramento1", "EnquadramentoAutoComplete", new
               {
                   value = Model.enquadramentoId.ToString(),
                   Text = Model.descricao_enquadramento ?? "",
                   nextField = "dt_inicio",
                   prevField = "nome_banco"
               })
                    </div>
                    <div class="col-md-2 col-xs-12 col-sm-12 col-lg-2">
                        <div class="form-group">
                            <label class="control-label" for="dt_inicio">Início</label>
                            @Html.EditorFor(info => info.dt_inicio, "DATE", new { identificador = "dt_inicio", value = Model.dt_inicio, readOnly = "false" })
                        </div>
                    </div>
                    <div class="col-md-2 col-xs-12 col-sm-12 col-lg-2">
                        <div class="form-group">
                            <label class="control-label" for="dia_vencimento">Vencimento</label>
                            @Html.DropDownListFor(m => m.dia_vencimento, DropDownListEnum.Dias31("", Model.dia_vencimento.ToString()), new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="col-md-2 col-xs-12 col-sm-12 col-lg-2">
                        <div class="form-group">
                            <label class="control-label" for="num_parcelas">Nº Parcelas</label>
                            @Html.TextBoxFor(info => info.num_parcelas, "{0:##0}", new { @class = "form-control text-right", @onkeypress = "return numeros()" })
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-2 col-xs-12 col-sm-12 col-lg-2">
                        <div class="form-group">
                            @Html.EditorFor(m => m.valor, "DECIMAL", new
                   {
                       htmlAttributes = (object)new { @class = "form-control text-right", @onfocus = "this.select();", @onblur = "fnValidaValor(this);" }
                   })
                        </div>
                    </div>
                    <div class="col-md-2 col-xs-12 col-sm-12 col-lg-2">
                        <div class="form-group">
                            @Html.EditorFor(m => m.vr_multa, "DECIMAL", new
                   {
                       htmlAttributes = (object)new { @class = "form-control text-right", @onfocus = "this.select();", @onblur = "fnValidaValor(this);" }
                   })
                        </div>
                    </div>
                    <div class="col-md-2 col-xs-12 col-sm-12 col-lg-2">
                        <div class="form-group">
                            @Html.EditorFor(m => m.vr_jurosMora, "DECIMAL", new
                   {
                       htmlAttributes = (object)new { @class = "form-control text-right", @onfocus = "this.select();", @onblur = "fnValidaValor(this);" }
                   })
                        </div>
                    </div>
                </div>
                <p>&nbsp;</p>
                <div class="row clearfix">
                    <div class="col-md-12">
                        <div class="form-group">
                            <input type="submit" class="btn btn-success" value="Salvar" name="btn-salvar" id="btn-salvar" />
                            <input type="button" onclick="window.location = '../CobrancaCad/Browse'" class="btn btn-default" value="Cancelar" />
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
    <div id="div-create-cli">
        @Html.Partial("CreateItem", Model)
    </div>
</div>
